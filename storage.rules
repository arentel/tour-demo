rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Tour images: anyone can read, only authenticated users can upload
    match /tours/{tourId}/scenes/{sceneId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // max 10MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
